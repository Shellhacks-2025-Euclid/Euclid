<UserControl
    x:Class="EuclidApp.Views.ViewportPlaceholder"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:EuclidApp.Views">
    <Grid>
        <Border Background="{DynamicResource Brush.ViewportBg}" CornerRadius="12" />
        <Grid>
            <Grid.Background>
                <DrawingBrush
                    SourceRect="0,0,32,32"
                    Stretch="None"
                    TileMode="Tile">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing Brush="{DynamicResource Brush.ViewportTile}">
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <LineGeometry StartPoint="0,0" EndPoint="32,0" />
                                    <LineGeometry StartPoint="0,0" EndPoint="0,32" />
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Grid.Background>
        </Grid>

        <Grid x:Name="InputLayer" Background="Transparent">
            <views:EuclidView
                x:Name="GL"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</UserControl>
