<Window
    x:Class="EuclidApp.Views.RenderImageWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Render Image"
    Width="1280"
    Height="800"
    Background="{DynamicResource Brush.Surface}"
    CanResize="True"
    mc:Ignorable="d">

    <Window.Styles>
        <Styles>
            <Styles.Resources>
                <SolidColorBrush x:Key="Brush.Surface" Color="#15171B" />
                <SolidColorBrush x:Key="Brush.Card" Color="#1E2127" />
                <SolidColorBrush x:Key="Brush.Border" Color="#2C313A" />
                <SolidColorBrush x:Key="Brush.Accent" Color="#5EA0EF" />
                <SolidColorBrush x:Key="Brush.ViewportBg" Color="#14161A" />
                <SolidColorBrush x:Key="Brush.ViewportTile" Color="#181B20" />
                <CornerRadius x:Key="Radius.Card">12</CornerRadius>

                <SolidColorBrush x:Key="Brush.Control.Bg" Color="#1C2026" />
                <SolidColorBrush x:Key="Brush.Control.BgHover" Color="#202531" />
                <SolidColorBrush x:Key="Brush.Control.BgFocus" Color="#242A36" />
                <SolidColorBrush x:Key="Brush.Control.Fg" Color="#E8EAF0" />
                <CornerRadius x:Key="Radius.Control">8</CornerRadius>

                <SolidColorBrush x:Key="ComboBoxBackground" Color="#1C2026" />
                <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#2C313A" />
                <SolidColorBrush x:Key="ComboBoxForeground" Color="#E8EAF0" />
                <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="#202531" />
                <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver" Color="#2C313A" />
                <SolidColorBrush x:Key="ComboBoxBackgroundFocused" Color="#242A36" />
                <SolidColorBrush x:Key="ComboBoxBorderBrushFocused" Color="#5EA0EF" />
                <SolidColorBrush x:Key="ComboBoxBackgroundDisabled" Color="#1A1D22" />
                <SolidColorBrush x:Key="ComboBoxForegroundDisabled" Color="#8B909A" />
                <SolidColorBrush x:Key="ComboBoxPopupBackground" Color="#1E2127" />
                <SolidColorBrush x:Key="ComboBoxPopupBorderBrush" Color="#2C313A" />
            </Styles.Resources>

            <Style Selector="Border.Card">
                <Setter Property="Background" Value="{DynamicResource Brush.Card}" />
                <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="{DynamicResource Radius.Card}" />
                <Setter Property="Padding" Value="8" />
            </Style>

            <Style Selector="Border.Toolbar">
                <Setter Property="Background" Value="#1A1D23" />
                <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
                <Setter Property="BorderThickness" Value="0,0,0,1" />
                <Setter Property="Padding" Value="8" />
            </Style>

            <Style Selector="Button.IconBtn">
                <Setter Property="Width" Value="34" />
                <Setter Property="Height" Value="30" />
                <Setter Property="Padding" Value="6,4" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Foreground" Value="#E8EAF0" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
            <Style Selector="Button.IconBtn:pointerover">
                <Setter Property="Background" Value="#202531" />
                <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
                <Setter Property="BorderThickness" Value="1" />
            </Style>
        </Styles>

        <Style Selector="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForeground}" />
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ComboBoxBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="8,4,28,4" />
            <Setter Property="MinHeight" Value="30" />
        </Style>
        <Style Selector="ComboBox:pointerover">
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackgroundPointerOver}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ComboBoxBorderBrushPointerOver}" />
        </Style>
        <Style Selector="ComboBox:focus">
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackgroundFocused}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ComboBoxBorderBrushFocused}" />
        </Style>
        <Style Selector="ComboBox:disabled">
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackgroundDisabled}" />
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForegroundDisabled}" />
            <Setter Property="Opacity" Value="0.75" />
        </Style>

        <Style Selector="ComboBox /template/ Border#PopupBorder,                          ComboBox /template/ Border#FlyoutPresenterBorder">
            <Setter Property="Background" Value="{DynamicResource ComboBoxPopupBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ComboBoxPopupBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>

        <Style Selector="ComboBoxItem">
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForeground}" />
        </Style>
        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackgroundPointerOver}" />
        </Style>
        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="{DynamicResource Brush.Accent}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Styles>

    <DockPanel LastChildFill="True">

        <Border
            Padding="8,4"
            Background="#171A20"
            BorderBrush="{DynamicResource Brush.Border}"
            BorderThickness="0,0,0,1"
            DockPanel.Dock="Top">
            <TextBlock
                FontSize="11"
                Opacity="0.85"
                Text="{Binding StatusBarText, FallbackValue=Frame: 1 | Time: 00:00.71 | Mem: 65.9M (Peak 126.9M)}" />
        </Border>

        <Border Classes="Toolbar" DockPanel.Dock="Top">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10">

                    <!--  Viewer / Image / Slot  -->
                    <ComboBox MinWidth="160" SelectedIndex="0">
                        <ComboBoxItem>Viewer: Render Result</ComboBoxItem>
                        <ComboBoxItem>Viewer: Compositor</ComboBoxItem>
                    </ComboBox>

                    <ComboBox MinWidth="100" SelectedIndex="0">
                        <ComboBoxItem>Image</ComboBoxItem>
                    </ComboBox>

                    <TextBlock
                        VerticalAlignment="Center"
                        Opacity="0.75"
                        Text="Zoom:" />
                    <ComboBox
                        MinWidth="90"
                        ItemsSource="{Binding ZoomPresets}"
                        SelectedItem="{Binding SelectedZoomPreset}" />

                    <!--  Fit  -->
                    <Button Classes="IconTextBtn" Command="{Binding FitCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                Kind="FitToScreenOutline" />
                            <TextBlock Text="Fit" />
                        </StackPanel>
                        <ToolTip.Tip>Fit to view</ToolTip.Tip>
                    </Button>

                    <!--  1:1  -->
                    <Button Classes="IconTextBtn" Command="{Binding OneToOneCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                Kind="Magnify" />
                            <TextBlock Text="1:1" />
                        </StackPanel>
                        <ToolTip.Tip>Zoom 100%</ToolTip.Tip>
                    </Button>

                    <Separator
                        Width="1"
                        Margin="2,0"
                        Background="{DynamicResource Brush.Border}" />

                    <!--  Save  -->
                    <Button Classes="IconTextBtn" Command="{Binding SaveCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                Kind="ContentSaveOutline" />
                            <TextBlock Text="Save" />
                        </StackPanel>
                        <ToolTip.Tip>Save</ToolTip.Tip>
                    </Button>

                    <!--  Save As  -->
                    <Button Classes="IconTextBtn" Command="{Binding SaveAsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                Kind="ContentSaveAllOutline" />
                            <TextBlock Text="Save As…" />
                        </StackPanel>
                        <ToolTip.Tip>Save As…</ToolTip.Tip>
                    </Button>

                    <!--  Copy  -->
                    <Button Classes="IconTextBtn" Command="{Binding CopyCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                Kind="ContentCopy" />
                            <TextBlock Text="Copy" />
                        </StackPanel>
                        <ToolTip.Tip>Copy to clipboard</ToolTip.Tip>
                    </Button>

                    <!--  Close  -->
                    <Button Classes="IconTextBtn" Command="{Binding CloseCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                Kind="WindowClose" />
                            <TextBlock Text="Close" />
                        </StackPanel>
                        <ToolTip.Tip>Close</ToolTip.Tip>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Background="{DynamicResource Brush.Surface}">
            <Grid>
                <Grid.Background>
                    <DrawingBrush
                        SourceRect="0,0,32,32"
                        Stretch="None"
                        TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Brush="{DynamicResource Brush.ViewportTile}">
                                <GeometryDrawing.Geometry>
                                    <GeometryGroup>
                                        <RectangleGeometry Rect="0,0,16,16" />
                                        <RectangleGeometry Rect="16,16,16,16" />
                                    </GeometryGroup>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>

                <Border
                    Width="820"
                    Height="462"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#101114"
                    BorderBrush="{DynamicResource Brush.Border}"
                    BorderThickness="1"
                    CornerRadius="12">
                    <Grid>
                        <Border
                            Margin="18"
                            Background="#0F1115"
                            BorderBrush="#3A3F49"
                            BorderThickness="1"
                            CornerRadius="6">
                            <Grid>
                                <TextBlock
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Opacity="0.75"
                                    Text="Render Result" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

    </DockPanel>
</Window>
